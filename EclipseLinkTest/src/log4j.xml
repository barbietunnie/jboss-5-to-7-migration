<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j/docs/api/org/apache/log4j/xml/log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

   <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
      <param name="Target" value="System.out"/>
      <param name="Threshold" value="DEBUG"/>

      <layout class="org.apache.log4j.PatternLayout">
         <param name="ConversionPattern" value="[%d] [%p,%c:%L] %m%n"/>
      </layout>
   </appender>

   <appender name="FILE" class="org.apache.log4j.FileAppender">
      <param name="File" value="./logs/jpatest.log"/>
      <param name="Threshold" value="DEBUG"/>
      <param name="Append" value="false"/>

      <layout class="org.apache.log4j.PatternLayout">
         <param name="ConversionPattern" value="[%d] [%p,%c:%L] %m%n"/>
      </layout>
   </appender>

   <logger name="org.springframework">
	  <level value="INFO"/> 
	  <appender-ref ref="FILE"/>
   </logger>

   <logger name="org.hibernate.internal">
	  <level value="INFO"/> 
	  <appender-ref ref="CONSOLE"/>
   </logger>
   <logger name="org.hibernate.engine.internal">
	  <level value="INFO"/> 
	  <appender-ref ref="CONSOLE"/>
   </logger>
   <logger name="org.hibernate.id">
	  <level value="INFO"/> 
	  <appender-ref ref="CONSOLE"/>
   </logger>
   <logger name="org.hibernate.type">
	  <level value="INFO"/> 
	  <appender-ref ref="CONSOLE"/>
   </logger>
   <logger name="org.hibernate.ejb">
	  <level value="INFO"/> 
	  <appender-ref ref="CONSOLE"/>
   </logger>
   <logger name="org.hibernate.cfg">
	  <level value="INFO"/> 
	  <appender-ref ref="CONSOLE"/>
   </logger>
   <logger name="org.hibernate.persister">
	  <level value="INFO"/> 
	  <appender-ref ref="CONSOLE"/>
   </logger>
   <logger name="org.hibernate.loader">
	  <level value="INFO"/> 
	  <appender-ref ref="CONSOLE"/>
   </logger>
   <logger name="org.hibernate">
	  <level value="INFO"/> 
	  <appender-ref ref="CONSOLE"/>
   </logger>

   <logger name="jpa">
	  <level value="DEBUG"/>
	  <appender-ref ref="FILE"/>
   </logger>

   <root>
      <level value="DEBUG"/>
      <appender-ref ref="CONSOLE"/>
      <appender-ref ref="FILE"/>
   </root>
</log4j:configuration>
